/* 顶部轮播图 */
swiper {
    height: 380rpx;
  }

  /* 九宫格区域 */
.category_panel1 {
    width: 100%;
    display: flex;
    color: #666;
    flex-direction: column;
    font-size: 11px;
    justify-content: space-around;
  }
  
.category-panel2 {
    height: 90px;
    width: 100%;
    display: flex;
    color: #666;
    flex-direction: row;
    font-size: 11px;
    justify-content: space-around;
  }
  
.category-item {
    display: flex;
    width: 60px;
    text-align: center;
    flex-direction: column;
  }
  
.category-item-image {
    width: 50px;
    height: 50px;
    overflow: unset;
    padding: 15px 12px 0 6px;
  }
  
.category-item-image1 {
    width: 50px;
    height: 45px;
    overflow: unset;
    padding: 15px 12px 0 6px;
  }
  
.category-item-text {
    margin-top: 11px;
  }
  
.category-item-text1 {
    margin-top: 0px;
  }
  
  /* 热门推荐商品 */
.hot_tip {
    font-size: 45rpx;
    color: #f4c903;
    margin: 25rpx 25rpx 15rpx 30rpx;
  }

  